@model IEnumerable<EmployeeToken.MVC.ViewModels.EmployeeViewModel>

@if (Model.Count() != 0)
{
    <table class="table table-striped">
        <thead class="bg-info">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Position)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BirthDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th>
                    Action(s)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @item.BirthDate.Value.ToString("dd-MM-yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        @Html.ActionLink(" Edit", "AddEditEmployee", "Employees", new { id = item.Id }, new { @class = "fa fa-pencil-square-o btn btn-outline-success" }) |
                        @Html.ActionLink(" Delete", "DeleteEmployee", "Employees", new { id = item.Id }, new { @class = "fa fa-minus-circle btn btn-outline-warning disabled" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="h3">No Record Found!</div>
}
